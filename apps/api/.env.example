# Environment
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL=postgresql://tubba_user:tubba_password@localhost:5432/tubba_db

# Redis (optional for development)
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-that-should-be-at-least-32-characters-long
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3002

# Email Configuration
EMAIL_PROVIDER=sendgrid
EMAIL_API_KEY=your-sendgrid-api-key
EMAIL_FROM_ADDRESS=noreply@tubba.se

# File Storage
STORAGE_PROVIDER=local
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=tubba-uploads
AWS_REGION=eu-north-1

# Payment Providers
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
SWISH_CERT_PATH=/path/to/swish/certificate.p12
MOBILEPAY_API_KEY=your-mobilepay-api-key
VIPPS_API_KEY=your-vipps-api-key

# Nordic Government APIs
BOLAGSVERKET_API_KEY=your-bolagsverket-api-key
BRREG_API_KEY=your-brreg-api-key
CVR_API_KEY=your-cvr-api-key

# Security Settings
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Feature Flags
ENABLE_EMAIL_VERIFICATION=true
ENABLE_BANKID_VERIFICATION=false
ENABLE_FILE_UPLOADS=true
MAX_FILE_SIZE=10485760